{
  "name": "rgd-bot",
  "version": "1.0.0",
  "license": "ISC",
  "author": "RGD Community",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsup",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node --enable-source-maps .",
    "start:debug": "node --inspect-brk --enable-source-maps .",
    "start:dev": "tsup --watch --onSuccess \"npm run start\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "deploy": "pm2 deploy ecosystem.config.js production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZirionNeft/rgd-bot.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/ZirionNeft/rgd-bot/issues"
  },
  "homepage": "https://github.com/ZirionNeft/rgd-bot#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "configPaths": [
      "./mikro-orm.config.js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "@directus/sdk": "^10.3.0",
    "@mikro-orm/core": "^5.5.2",
    "@mikro-orm/migrations": "^5.5.2",
    "@mikro-orm/sqlite": "^5.5.2",
    "@sapphire/framework": "^3.1.4",
    "@sapphire/pieces": "^3.6.0",
    "@sapphire/plugin-logger": "^3.0.1",
    "@sapphire/utilities": "latest",
    "@types/node-cron": "^3.0.6",
    "axios": "^1.2.1",
    "discord.js": "13",
    "dotenv": "^16.0.3",
    "nanoid": "^3.3.4",
    "node-cron": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@mikro-orm/cli": "^5.5.2",
    "@sapphire/decorators": "^5.0.0",
    "@sapphire/ts-config": "latest",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "readline-sync": "^1.4.10",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4"
  }
}
