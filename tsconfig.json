{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "verbatimModuleSyntax": false,
    "typeRoots": ["./types/*.d.ts"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitOverride": true,
    "strictPropertyInitialization": false,
    "allowUnreachableCode": true,
    "strictNullChecks": false,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "#base/*": ["src/*"],
      "#base": ["src"],
      "#lib/*": ["src/lib/*"],
      "#lib": ["src/lib"],
      "#configs/*": ["src/configs/*"],
      "#configs": ["src/configs"]
    },
    "sourceMap": true,
    "inlineSources": true,
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "tsc-alias": {
    "resolveFullPaths": false
  }
}
